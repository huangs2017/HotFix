<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:theme="@style/TextColorTheme"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_iv_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/left_menu_icon"
        android:tag="skin:src:left_menu_icon"/>

    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_icon"
        android:layout_alignTop="@id/id_iv_icon"
        android:textColor="@color/item_text_color"
        android:text="玩Android"
        android:tag="skin:textColor:item_text_color"/>

    <TextView
        android:id="@+id/id_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_icon"
        android:layout_alignBottom="@id/id_iv_icon"
        android:textColor="@color/item_text_color"
        android:text="鸿洋"
        android:tag="skin:textColor:item_text_color"/>

</RelativeLayout>